/* pages/map/map.wxss */
/* 容器布局 */
.container {
  height: 100vh;
  width: 100%;
  position: relative;
}

/* 搜索框样式 */
.search-box {
  position: fixed;
  display: flex;
  align-items: center;
  top: 20rpx;
  left: 5%;
  width: 90%;
  z-index: 999;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border-radius: 40rpx;
  background: #fff;
}
.search-input {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

/* 搜索图标容器 */
.search-images {
  /* 基础尺寸 */
  width: 40rpx;
  height: 40rpx;
  
  /* 定位技巧 */
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  
  /* 图标适配优化 */
  object-fit: contain;
  vertical-align: middle;
  
  /* 交互优化 */
  pointer-events: none; /* 避免图标遮挡输入框点击事件 */
}

/* 资源类型滚动条 */
.resource-scroll {
  position: fixed;
  top: 120rpx;
  white-space: nowrap;
  padding: 20rpx;
  z-index: 999;
  background: rgba(255,255,255,0.9);
  width: 100%;           /* 占满父容器 */
  white-space: nowrap;   /* 强制横向排列 */
  padding: 20rpx 0;      /* 上下留白 */
}
.resource-item {
  display: inline-flex;
  align-items: center;
  flex-direction: row;  
  margin-right: 40rpx;
  padding: 15rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
 
}
.resource-icon {
  width: 40rpx;
  height: 40rpx;
  object-fit: contain;  
  transition: transform 0.3s ease;
  margin-right: 10rpx;   
}
.resource-item text {
  font-size: 28rpx;      
  line-height: 1.5;
}
.resource-item.active {
  background: #007AFF;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;  
  transform: scale(0.9); 
}

/* 地图容器 */
.map-container {
  width: 100%;
  height: 100%;
}

/* 控制按钮组 */
.control-group {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  z-index: 999;
}
.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}
.control-icon {
  width: 50rpx;
  height: 50rpx;
}


/* 自定义弹窗样式 */
.custom-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.custom-dialog {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 24rpx;
}

.dialog-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
  /* display: flex;
  justify-content: center; */
}

.location-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.dialog-actions {
  display: flex;
  justify-content: flex-end;
  gap: 48rpx;
}

.btn-cancel, .btn-confirm {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-cancel {
  color: #666;
  background: #f0f0f0;
}

.btn-confirm {
  color: #fff;
  background: #e64340; /* 红色按钮 */
}

/* 新增图片样式 */
.location-image-container {
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.location-image {
  width: 100%;
  height: 100%;
}

.dialog-text {
  display: block;
  text-align: center;
  line-height: 1.5;
}