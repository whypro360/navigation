/* page.wxss */
page {
  background-color: #f1f1f1;
  font-size: 30rpx;
}

.header {
  background: #fff;
  height: 290rpx;
  padding-bottom: 110rpx;
}

.header .bg {
  width: 100%;
  height: 200rpx;
  padding-top: 100rpx;
  background-color: #4191ea;
}

.box {
  width: 650rpx;
  height: 280rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 5rpx 20rpx 0rpx rgba(0, 0, 150, .2);
}

.box .box-hd {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
}

.box .box-hd .avator {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-top: -80rpx;
  overflow: hidden;
}

.box .box-hd .avator image {
  width: 100%;
  height: 100%;
}

.box .box-hd .name {
  width: 100%;
  text-align: center;
}

.box .box-bd {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: center;
}

.box .box-bd .item {
  flex: 1 1 auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  border-right: 1px solid #f1f1f1;
  margin: 15rpx 0;
}

.box .box-bd .item:last-child {
  border: none;
}

.box .box-bd .item .icon {
  width: 60rpx;
  height: 60rpx;
}

.box .box-bd .item .icon image {
  width: 100%;
  height: 100%;
}

.box .box-bd .item .text {
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

.list-content {
  background: #fff;
}

.list {
  width: 100%;
  border-bottom: 15rpx solid #f1f1f1;
  background: #fff;
}

.list:last-child {
  border: none;
}

.list .li {
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  border-bottom: 1px solid rgb(243, 243, 243);
  display: flex;
  align-items: center;
}

.list .li.noborder {
  border-bottom: 0;
}

.list .li .icon {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
}

.list .li .icon image {
  width: 50rpx;
  height: 50rpx;
}

.list .li .text {
  padding-left: 20rpx;
  width: 100%;
  color: #666;
}

.list .li .to {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
}