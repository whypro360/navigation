/* 按钮交互（网页7、网页8的动态效果） */
.get-location-btn {
  background: linear-gradient(135deg, #10DDC2, #0FC7E9);
  color: white;
  border-radius: 50rpx;
  height: 96rpx;
  font-size: 32rpx;
  margin: 48rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}


.btn-icon {
  width: 36rpx;        /* 图标宽度（建议使用rpx单位）[3](@ref) */
  height: 36rpx;       /* 图标高度与宽度一致 */
  margin-right: 16rpx; /* 图标与文字间距 */
  vertical-align: middle; /* 垂直居中对齐[6](@ref) */
}

/* 整体容器样式 */
.location-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 输入框区域样式 */
.input-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
}

/* 标签样式 */
.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

/* 输入框样式 */
.nickname-input {
  flex: 1;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
}

/* 下拉框样式 */
.picker {
  flex: 1;
  padding: 10rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 下拉框的箭头图标 */
.picker::after {
  content: '▼';
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 按钮样式 */
.get-location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 15rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 按钮图标样式 */
.btn-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

/* 坐标显示区域样式 */
.coordinates {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
}

/* 坐标项样式 */
.coordinate-item {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  padding: 15rpx;
  background-color: #2196f3;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}